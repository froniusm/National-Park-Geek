@using Capstone.Web.Models;
@model List<Park>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>National Parks</h2>
<table class="table table-responsive">
    @foreach (Park p in Model)
    {
        <tr>
            <td class="col-xs-6 col-lg-4 col-lg-offset-2">
                <a href="@Url.Action("Detail", "Home", new { parkCode = p.ParkCode })">
                    <img class="img-responsive" src="@Url.Content("~/Content/parks/" + p.ParkCode + ".jpg")" 
                         alt="@p.ParkName"/>
                </a>
            </td>
             <td class="col-xs-6 col-lg-4 col-lg-offset-2">
                <a href="@Url.Action("Detail", "Home", new { parkCode = p.ParkCode })">
                    <div>
                        <h4>@p.ParkName</h4>
                        <p>@p.State</p>
                        <p>@p.ParkDescription</p>
                    </div>
                </a>
            </td>
        </tr>
    }
</table>